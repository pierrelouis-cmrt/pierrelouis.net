{
  "devDependencies": {
    "markdown-it": "^14.1.0",
    "markdown-it-abbr": "^2.0.0",
    "markdown-it-container": "^4.0.0",
    "markdown-it-deflist": "^3.0.0",
    "markdown-it-footnote": "^4.0.0",
    "markdown-it-mark": "^4.0.0",
    "markdown-it-mathjax": "^2.0.0",
    "markdown-it-task-lists": "^2.1.1",
    "nodemon": "^3.1.10",
    "tailwindcss": "^3.4.14"
  },
  "scripts": {
    "build:css": "npx tailwindcss -i ./src/styles.css -o ./src/output.css",
    "build:posts": "node scripts/buildPosts.js",
    "build:bookmarks": "node scripts/buildBookmarks.js",
    "build:md": "node scripts/buildMdPages.js",
    "cachebust:css": "node scripts/bumpCssVersion.js",
    "build": "npm run build:css && npm run build:posts && npm run build:bookmarks && npm run build:md && npm run cachebust:css",
    "dev": "nodemon --watch ./src/styles.css --exec \"npx tailwindcss -i ./src/styles.css -o ./src/output.css\""
  }
}
